<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sviolet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/list_view_main_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#505050"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_view_main_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_view_main_item_imageview0"
                android:layout_width="162dp"
                android:layout_height="162dp" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="162dp"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_view_main_item_imageview1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="2dp" />

                <ImageView
                    android:id="@+id/list_view_main_item_imageview2"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="162dp"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_view_main_item_imageview3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="2dp" />

                <ImageView
                    android:id="@+id/list_view_main_item_imageview4"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <sviolet.turquoise.ui.view.shadow.LinearShadowView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        sviolet:LinearShadowView_direction="bottom"
        sviolet:colour="#20000000" />

</LinearLayout>