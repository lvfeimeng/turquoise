<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">
    
    <!-- 阴影层 -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        android:background="@drawable/rounded_list_item_shadow">
    
    	<!-- 上层,比阴影层略小 -->
	    <LinearLayout	
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="3px"
		    android:layout_marginLeft="3px"
		    android:layout_marginRight="3px"
		    android:layout_marginBottom="6px"
		    android:background="@drawable/rounded_list_item_selector">
	    
	    	<!-- 图片 -->
		    <ImageView
		        android:id="@+id/rounded_list_item_image"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:adjustViewBounds="true"
		        android:contentDescription="@null"/>
		    
		    <!-- 文字 -->
		    <LinearLayout	
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			    
				<TextView 
				    android:id="@+id/rounded_list_item_topic"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="7"
				    android:padding="5dp"
				    android:singleLine="true"
				    android:textSize="16sp"
				    android:textColor="#505050"/>
				
			    <TextView 
				    android:id="@+id/rounded_list_item_state"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_weight="3"
				    android:gravity="center|right"
				    android:padding="5dp"
				    android:singleLine="true"
				    android:textSize="16sp"
				    android:textColor="#A0A0A0"/>
			
			</LinearLayout>
		
		</LinearLayout>
	
    </LinearLayout>
	
</LinearLayout>
