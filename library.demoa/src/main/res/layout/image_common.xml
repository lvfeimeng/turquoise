<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 第一行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_common_imageview11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/image_common_imageview12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />

        </LinearLayout>

        <!-- 第二行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_common_imageview21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/image_common_imageview22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/image_common_imageview23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />

        </LinearLayout>

        <!-- 第三行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_common_imageview31"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image_common_imageview32"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image_common_imageview33"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>