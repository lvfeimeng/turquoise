<?xml version="1.0" encoding="utf-8"?>

<!-- 阴影demo -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="#03000000"/>
        </shape>
    </item>
    <item android:left="1px"
        android:right="1px"
        android:top="1px"
        android:bottom="1px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="#06000000"/>
        </shape>
    </item>
    <item android:left="2px"
        android:right="2px"
        android:top="2px"
        android:bottom="2px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="#06000000"/>
        </shape>
    </item>
    <item android:left="2px"
        android:right="2px"
        android:top="2px"
        android:bottom="3px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="#06000000"/>
        </shape>
    </item>
    <item android:left="3px"
        android:right="3px"
        android:top="3px"
        android:bottom="4px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="#06000000"/>
        </shape>
    </item>
    <item android:left="3px"
        android:right="3px"
        android:top="3px"
        android:bottom="5px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="#06000000"/>
        </shape>
    </item>
</layer-list>