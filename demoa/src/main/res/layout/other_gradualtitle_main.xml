<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/other_gradualtitle_main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/other_gradualtitle_main_statusbackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/translucent"
            android:visibility="gone"/>
        
        <View
            android:id="@+id/other_gradualtitle_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/other_gradualtitle_main_titleheight"
            android:background="@color/translucent" />

    </LinearLayout>

</RelativeLayout>