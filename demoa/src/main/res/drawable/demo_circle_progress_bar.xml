<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%"
    android:interpolator="@android:anim/linear_interpolator">

    <!-- shape 几何图形 shape = ring/rectangle/oval/line -->
    <!-- innerRadius 内环半径(会覆盖innerRadiusRatio) -->
    <!-- innerRadiusRatio 内环半径比率 内环半径 = 环宽度 / innerRadiusRatio -->
    <!-- thickness 环的厚度(会覆盖thicknessRatio) -->
    <!-- thicknessRatio 环的厚度比率 环厚度 = 环宽度 / thicknessRatio -->
    <!-- useLevel true:表示可以当做LevelListDrawable使用 一般false -->
    <shape
        android:innerRadiusRatio="3"
        android:thicknessRatio="30"
        android:shape="ring"
        android:useLevel="false" >

        <!-- gradient 指定渐变色 type = linear线性渐变/radial环形渐变/sweep渐变 -->
        <gradient
            android:startColor="#10A0A0A0"
            android:centerColor="#10A0A0A0"
            android:endColor="#FFA0A0A0"
            android:type="sweep"
            android:useLevel="false" />
        
    </shape>

</rotate>